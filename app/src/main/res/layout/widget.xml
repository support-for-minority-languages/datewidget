<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#69525252"
    android:baselineAligned="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_day"
            android:text="@string/day_text"
            style="@style/text_down"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal">
        </TextView>

        <TextView
            android:id="@+id/tv_month"
            android:text="@string/month_text"
            style="@style/text_down"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/tv_year"
            android:text="@string/year_text"
            style="@style/text_down"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dayofweek"
            style="@style/text_down"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:text="@string/dayofweek_text"></TextView>

        <TextView
            android:id="@+id/tv_bold"
            android:text="@string/year_text"
            style="@style/text_down"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>